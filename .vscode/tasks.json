{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(32)build",
            "type": "shell",
            "command": "C:\\mingw32\\bin\\g++.exe",
            "args": [
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib\\32",
                "-g",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\Common.cpp",
                "-o",
                "${workspaceFolder}\\bin\\32\\main",
                "-lglew32",
                "-lglfw3",
                "-lopengl32",
                "-lfreetype",
                "-lgdi32",
                "-lspdlog",
                "-w",
                "-std=c++17",
                "-static-libstdc++",
                "-static-libgcc",
                "-DDEBUG"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "C:\\mingw32\\bin"
            }
        },
        {
